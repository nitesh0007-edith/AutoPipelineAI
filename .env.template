# AutoPipelineAI Configuration Template
# Copy this file to .env and customize the values

# Ollama Configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_API_KEY=ollama
OLLAMA_DEFAULT_MODEL=llama3

# Database Configuration
DUCKDB_PATH=data/database.duckdb
SQLITE_PATH=data/database.db

# Cache Configuration
CACHE_DIR=data/cache
CACHE_TTL_SECONDS=3600

# Logging Configuration
LOG_LEVEL=INFO
LOG_DIR=logs
LOG_ROTATION=1 MB

# Data Directories
INPUT_DIR=input_docs
OUTPUT_DIR=data/processed
REPORTS_DIR=data/reports
EXPORTS_DIR=data/exports

# Memory Store Configuration
MAX_HISTORY=100

# PDF Extraction Configuration
EXTRACTED_IMAGES_DIR=data/extracted_images
EXTRACTED_TABLES_DIR=data/extracted

# SpaCy Model (for NER)
SPACY_MODEL=en_core_web_sm

# Security Settings
ALLOWED_MODULES=pandas,numpy,plotly,matplotlib,seaborn,datetime,json,re,math,statistics

# Performance Settings
MAX_WORKERS=4
CHUNK_SIZE=1000
